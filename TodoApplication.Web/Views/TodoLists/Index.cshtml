@model TodoListsViewModel

<div class="row">
    <div class="col-md-6">
        <h3 class="ms-5">Todo Lists</h3>
    </div>
    <div class="col-md-6 text-end">
        <a href="@Url.Action("Create", "TodoTasks")" class="btn btn-primary mt-2 ms-5">New Task</a>
    </div>
</div>


@foreach (var todoList in Model.TodoLists)
{
    <div class="row mt-2 ms-2">
        <a class="btn btn-block" asp-action="Edit" asp-route-id="@todoList.Id">
            <div class="d-flex justify-content-between align-items-center">
                <span>@todoList.Title</span>
                <span>@todoList.CountOfTasks</span>
                <a class="btn btn-block btn-danger" asp-action="Delete" asp-route-id="@todoList.Id">
                    <i class="fas fa-trash"></i> Delete
                </a>
            </div>
        </a>
    </div>
}

<div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary"
     class="btn-group pull-right m-1">
</div>